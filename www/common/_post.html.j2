{% set post_id %}
post-{% filter urlencode %}{% filter replace(" ", "_") %}{% filter striptags %}{% block posttitle %}{% endblock %}{% endfilter %}{% endfilter %}{% endfilter %}
{% endset %}
<div class="post">
  <h2>{{self.posttitle()}}<a href="#{{post_id}}"><div class="link-icon"></div></a></h2>
  <div class="post-time"><time datetime="{{date}}">{{pretty_date}}</time></div>
  <div class="post-body">
  {% block post %}{% endblock %}
  </div>
</div>
